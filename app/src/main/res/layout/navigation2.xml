<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SelPiano">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="485dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:background="@drawable/q145_color"
                android:padding="5dp"
                android:text="Q145"
                android:textSize="50sp"
                android:textStyle="bold"
                tools:clickable="true" />

            <Button
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="@drawable/q150_color"
                android:padding="5dp"
                android:text="Q150"
                android:textSize="50sp"
                android:textStyle="bold"
                tools:clickable="true" />

            <Button
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/q155_color"
                android:padding="5dp"
                android:text="Q155"
                android:textSize="50sp"
                android:textStyle="bold"
                tools:clickable="true" />

        </LinearLayout>

    </HorizontalScrollView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/non_connesso"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="3dp"
                android:src="@android:drawable/ic_delete"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/connesso"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/connesso"
                android:visibility="invisible" />
        </FrameLayout>

        <TextView
            android:id="@+id/serverconn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="1dp"
            android:text="Server connection: "
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/connesso_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"
                android:text="Connected"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/non_connesso_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"
                android:text="Disconnected"
                android:textSize="15sp"
                android:visibility="invisible" />
        </FrameLayout>

    </LinearLayout>


</RelativeLayout>
